<!--suppress XmlUnboundNsPrefix -->
<div class="contentLayout"
     data-atlassian-layout="{'name':'pagelayout-two-left','columns':['structure','experts'],'header':true,'footer':true}">
    <div class="header">
        <div class="innerCell">
            <div class="expertfinder application description">
                <ac:rich-text-body>
                    <ac:placeholder>
                        <at:i18n at:key="expertfinder.plugin.templates.application.description.placeholder" />
                    </ac:placeholder>
                </ac:rich-text-body>
            </div>
        </div>
    </div>
    <hr />
    <div class="columnLayout twoColumns">
        <div class="cell structure">
            <div class="innerCell">
                <h2><at:i18n at:key="expertfinder.plugin.templates.application.narrowerapplications" /></h2>
                <div class="expertfinder application narrower">
                    <ac:structured-macro ac:name="pagetree">
                        <ac:parameter ac:name="root">@self</ac:parameter>
                    </ac:structured-macro>
                </div>
            </div>
        </div>
        <div class="cell experts">
            <div class="innerCell">
                <h2>
                    <at:i18n at:key="expertfinder.plugin.templates.application.experts" />
                    <small>
                        (<at:i18n at:key="expertfinder.plugin.templates.application.experts.tip" />)
                    </small>
                </h2>
                <ul class="expertfinder application experts">
                    <li>
                        <ac:placeholder ac:type="mention">
                            <at:i18n at:key="expertfinder.plugin.templates.application.experts.placeholder" />
                        </ac:placeholder>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="innerCell">
            <hr />
        </div>
    </div>
</div>